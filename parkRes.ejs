<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Hello, world!</title>
  </head>
  <body>
    <div class="panel">
      <ol class="list-group" id="display">
        <li class="list-group-item"></li>
      </ol>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>
      $(document).ready(()=>{
        const display = $("#display")

        const buildTemplete = (park)=>{
          if(park.status=="p")
            return '<div class="parked"></div>';
          if(park.status=="w")
            return '<div class="unparked"></div>';
          if(park.status=="u")
            return '<div class="waiting"></div>';
        }

        const getParkSlot = ()=>{
            fetch('/parkSlot',{method:"get"}).then((response)=>{
                return response.json();
            }).then((data)=>
            {
                console.log(data);
                displayPark(data);
            });
        }
        getParkSlot();

        const displayPark = (data)=>{
          data.forEach((park) => {
            display.append(buildTemplete(park));            
          });
        }
      })
    </script>
    <style>
      .panel{
        width: 200px;      
        height: 450px;
        background-color: rgb(21, 128, 128);
      }
      .parked{
        width: 70px;
        height: 70px;
        background-color: brown;
        margin-left: 8px;
        margin-top: 8px;  
      }
      .unparked{
        width: 70px;
        height: 70px;
        background-color: rgb(218, 195, 195);
        margin-left: 8px;
        margin-top: 8px;  
      }
      .waiting{
        width: 70px;
        height: 70px;
        background-color: rgb(23, 192, 73);
        margin-left: 8px;
        margin-top: 8px;  
      }
    </style>
  </body>
</html>